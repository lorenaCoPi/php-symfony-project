{% extends "RickAndMorty/baseRickMorty.html.twig" %}

{% block contenido %}
<h5>Usuario: {{app.user.name|default("")}}</h5>
    <h2>Listado de Personajes </h2>
    <div class="row row-cols-1 row-cols-md-2">
        {% for character in rickAndMorty %}
            <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ character.image }}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ character.name }}</h5>
                        <p class="card-text">{{ character.status }}</p>
                        <a href="{{ path("getCharacter", {"id": character.id}) }} " class="btn btn-primary">MÃ¡s Info</a>
                        {% if is_granted("ROLE_ADMIN")%}
                        <a href="{{ path("editCharacter", {"id": character.id}) }} " class="btn btn-primary">Editar</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
